<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedUpdateActivity">

    <include
        android:id="@+id/feedupdateToolbar"
        layout="@layout/feed_update_toolbar" />
    
    <LinearLayout
        android:id="@+id/feedupdateToolbarLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_below="@+id/feedupdateToolbar"
        ></LinearLayout>
    
   <ImageButton
       android:id="@+id/btnFeedUpdatePhoto"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_margin="5dp"
       android:src="@drawable/ic_baseline_add_a_photo_24"
       android:layout_below="@+id/feedupdateToolbarLine"
       />

    <EditText
        android:id="@+id/etMemo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@id/btnFeedUpdatePhoto"
        android:layout_below="@id/feedupdateToolbarLine"
        android:layout_margin="5dp"
        android:hint="Memo" />
    


</RelativeLayout>